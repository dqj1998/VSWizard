{
  "name": "vswizard",
  "displayName": "VSWizard",
  "description": "AI wizard for VSCode",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/dqj/VSWizard.git"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:vswizard-chat"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vswizard.helloWorld",
        "title": "wzd: Hello World"
      },
      {
        "command": "vswizard.startChat",
        "title": "wzd: Start Ollama Chat"
      },
      {
        "command": "vswizard.listModels",
        "title": "wzd: List Ollama Models"
      },
      {
        "command": "vswizard.clearLLMSelection",
        "title": "wzd: Clear Ollama Model Selection(For debugging)"
      },
      {
        "command": "vswizard.newSession",
        "title": "wzd: New Session"
      },
      {
        "command": "vswizard.listHistory",
        "title": "wzd: List Chat History"
      },
      {
        "command": "vswizard.setOllamaURL",
        "title": "wzd: Set Ollama URL"
      },
      {
        "command": "vswizard.selectProvider",
        "title": "wzd: Select LLM Provider (Ollama or OpenAI)"
      },
      {
        "command": "vswizard.setOpenAIParams",
        "title": "wzd: Set OpenAI API Parameters"
      },
      {
        "command": "vswizard.mcpInstall",
        "title": "wzd: Install MCP Server"
      },
      {
        "command": "vswizard.mcpList",
        "title": "wzd: List MCP Servers"
      },
      {
        "command": "vswizard.mcpStart",
        "title": "wzd: Start MCP Server"
      },
      {
        "command": "vswizard.mcpStop",
        "title": "wzd: Stop MCP Server"
      },
      {
        "command": "vswizard.mcpUninstall",
        "title": "wzd: Uninstall MCP Server"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vswizard-sidebar",
          "title": "VSWizard",
          "icon": "media/vswizard.png"
        }
      ]
    },
    "views": {
      "vswizard-sidebar": [
        {
          "id": "vswizard-chat",
          "name": "VSWizard Chat",
          "type": "webview",
          "icon": "media/vswizard.png"
        }
      ]
    },
    "configuration": {
      "title": "VSWizard Configuration",
      "properties": {
        "vswizard.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "The URL of the local Ollama instance."
        },
        "vswizard.mcp.connectionTimeout": {
          "type": "number",
          "default": 30000,
          "minimum": 5000,
          "maximum": 120000,
          "description": "Connection timeout for MCP servers in milliseconds (5-120 seconds)"
        },
        "vswizard.mcp.retryCount": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "maximum": 10,
          "description": "Number of retry attempts for failed MCP server connections"
        },
        "vswizard.mcp.autoReconnectInterval": {
          "type": "number",
          "default": 5000,
          "minimum": 1000,
          "maximum": 60000,
          "description": "Auto-reconnect interval for MCP servers in milliseconds (1-60 seconds)"
        },
        "vswizard.mcp.logLevel": {
          "type": "string",
          "enum": ["error", "warn", "info", "debug"],
          "default": "info",
          "description": "Log level for MCP server operations"
        },
        "vswizard.mcp.autoStartServers": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start MCP servers when extension activates"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
